{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Narvik Editor",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "ask": true,
        "confirm": false,
        "message": true,
        "open": true,
        "save": false
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "exists": true,
        "scope": { "allow": ["$HOME/**"] }
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "all": false,
        "startDragging": true,
        "close": true,
        "maximize": true,
        "unmaximize": true,
        "minimize": true,
        "setFullscreen": true,
        "setSize": true
      }
    },
    "windows": [
      {
        "title": "Narvik Editor",
        "width": 960,
        "height": 620,
        "minWidth": 660,
        "minHeight": 450,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.narvik.editor",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
